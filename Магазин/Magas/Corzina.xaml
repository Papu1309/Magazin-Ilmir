<Window x:Class="Магазин.Magas.Corzina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Магазин.Magas"
        mc:Ignorable="d"
        Title="Corzina" Height="450" Width="800" >
    <Grid>
        <ListView x:Name="SelectedSpicoksListView" Margin="0,0,0,30">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Стоимость"  Width="100" DisplayMemberBinding="{Binding Price}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnCarculate" Content="Оплатить заказ" Click="btnCarculate_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Height="60" Background="Gold"></Button>
        <TextBox IsReadOnly="True" x:Name="txbCarcul"  Width="173" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
