<Page x:Class="Магазин.Magas.Doelen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Magas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Oplata">

    <Grid Background="Red" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Оплата товара" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,15,0,15" FontSize="30" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Center" Width="224" ></TextBlock>
        <TextBlock Text="Номер карты" Grid.Row="2" Grid.ColumnSpan="2" Margin="15" FontSize="25" FontWeight="Bold" Grid.Column="2" ></TextBlock>
        <TextBox Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="3" Margin="15,32,20,20" />
        <TextBlock Text="Имя владельца карты" Grid.Row="4" Grid.ColumnSpan="4"  Margin="98,11,67,19" FontSize="25" FontWeight="Bold" Grid.Column="1" ></TextBlock>
        <TextBox Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="3" Margin="57,33,92,19" />
        <TextBlock Text="CVV" Grid.Row="3" Grid.ColumnSpan="4"  Margin="80,14,85,14" FontSize="25" FontWeight="Bold" Grid.Column="2" ></TextBlock>
        <TextBox Grid.Row="3" Grid.Column="2" Margin="85,25,54,25" Grid.ColumnSpan="2" />
        <TextBlock Text="Дата выпсуска" Grid.Row="3" Grid.ColumnSpan="4"  Margin="98,11,67,19" FontSize="25" FontWeight="Bold" Grid.Column="4" ></TextBlock>
        <DatePicker Grid.Column="6" Margin="86,29,-59,25" Grid.Row="3"/>
        <Button x:Name="btnCarculate" Content="Оплатить" Click="btnCarculate_Click" FontSize="26" FontWeight="Bold" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Background="Green" Margin="0,0,0,22"/>
    </Grid>
</Page>
